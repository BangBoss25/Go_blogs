@model User

@{
    Layout = "_LayoutAkun";
}

<title>Go_Blogs | Registration Account</title>

<p class="login-box-msg">Silahkan Daftar Akun</p>

<form asp-action="Daftar">

    <div class="input-group mb-3">
        <input asp-for="Name" class="form-control" placeholder="Name" />
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-user"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <input asp-for="Username" class="form-control" placeholder="Username" />
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-user"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-8">
            <div class="icheck-primary">
                <p>Sudah Punya Akun ? <a asp-action="Daftar">Masuk</a></p>
            </div>
        </div>
        <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
        </div>
    </div>

</form>